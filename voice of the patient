# voice_of_the_patient.py (clean version using .wav)

import logging
import speech_recognition as sr
from pydub import AudioSegment
from io import BytesIO
from faster_whisper import WhisperModel

# ‚úÖ Logging setup
logging.basicConfig(level=logging.INFO, format='%(asctime)s - %(levelname)s - %(message)s')

# ‚úÖ Load whisper model once
model = WhisperModel("base", compute_type="int8")  # Use "tiny" for faster, "small" for better accuracy

# Step 1: Record and save as WAV
def record_audio(file_path, timeout=20, phrase_time_limit=None):
    recognizer = sr.Recognizer()
    try:
        with sr.Microphone() as source:
            logging.info("üéôÔ∏è Adjusting for ambient noise...")
            recognizer.adjust_for_ambient_noise(source, duration=1)
            logging.info("üé§ Start speaking now...")

            audio_data = recognizer.listen(source, timeout=timeout, phrase_time_limit=phrase_time_limit)
            logging.info("‚úÖ Recording complete.")

            # Save as WAV instead of MP3 for better compatibility
            wav_data = audio_data.get_wav_data()
            audio_segment = AudioSegment.from_wav(BytesIO(wav_data))
            audio_segment.export(file_path, format="wav")
            logging.info(f"‚úÖ Audio saved to {file_path}")

    except sr.WaitTimeoutError:
        logging.error("‚ùå Timeout! You took too long to start speaking.")
    except OSError as e:
        logging.error(f"‚ùå Microphone issue: {e}")
    except Exception as e:
        logging.error(f"‚ùå An error occurred: {e}")

# Step 2: Transcription
def transcribe_with_faster_whisper(audio_filepath):
    try:
        segments, _ = model.transcribe(audio_filepath)
        full_text = " ".join(segment.text.strip() for segment in segments)
        return full_text.strip()
    except Exception as e:
        logging.error(f"‚ùå Error during transcription: {e}")
        return None

# Step 3: Main
if __name__ == "__main__":
    audio_filepath = "patient_voice_test.wav"
    record_audio(file_path=audio_filepath)

    logging.info("‚úÖ Transcribing audio...")
    transcribed_text = transcribe_with_faster_whisper(audio_filepath)

    if transcribed_text:
        logging.info("üìù Transcription Result:")
        print(transcribed_text)
    else:
        logging.error("‚ùå Transcription failed.")
